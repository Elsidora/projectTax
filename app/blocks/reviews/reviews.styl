.reviews
	margin-bottom 80px
	&__title
		margin-bottom 70px
		text-align center
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: center;
		margin-bottom 60px
	&__item
		width 250px
		margin-right 50px
		color $c_black
		font-family $base-font
		font-size 19px
		text-align center
	&__review-text
		margin-bottom 15px
		text-align left
	&__add-review
		display block
		width 240px
		min-height 40px
		margin 0 auto
		color $c_black
		font-family $base-font
		font-size 19px
		line-height 40px
		background-color $c_white
		text-align center
