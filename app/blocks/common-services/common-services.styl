.common-services
	display flex
	margin-bottom 40px
	&__item
		position relative
		width 150px
		margin-right 15px
		padding-top 60px
		color $c_black
		font-family $base-font
		font-size 19px
		text-align center
		list-style none!important
		&:last-child
			margin-right 0
	&__icon
		position absolute
		top 0
		left calc(50% - 20px)
