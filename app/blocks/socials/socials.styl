.socials
	margin-bottom 60px
	@media (max-width: 380px)
		display none
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content center
		font-size 0
	&__item
		margin-right 30px
		width 60px
		height 60px
		&:last-child
			margin-right 0
	&__link
		position relative
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content: center;
		align-items: center;
		width inherit
		height inherit
		.icon
			display block
			fill $c_white
			left calc(50% - 20px)
			top calc(50% - 20px)
			// margin auto
			&:hover
				fill $c_black
