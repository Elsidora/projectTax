.top-menu
	@media (max-width: 768px)
		order 2
	&__toggle
		display none
	&_closed .top-menu__toggle
		@media (max-width: 380px)
			display block
			font-size 0
			border none
			outline none
		&:before 
			content: "";
			position: absolute;
			top 55px
			right: 35px;
			z-index: 13;
			width: 30px;
			height: 30px;
			transition: opacity 0.3s ease;
			background: url("../images/menu-open.svg") no-repeat 50% 50%;
			background-size: 30px 30px;
	&_opened .top-menu__toggle
		@media (max-width: 380px)
			display block
			font-size 0
			border none
			outline none
		&:before 
			content: "";
			position: absolute;
			top 55px
			right: 35px;
			z-index: 13;
			width: 30px;
			height: 30px;
			transition: opacity 0.3s ease;
			background: url("../images/menu-close.svg") no-repeat 50% 50%;
			background-size: 30px 30px;
	
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		align-content center
		margin-bottom 0
		@media (max-width: 380px)
			display none
			width 100%
			border-top 1px solid $c_yellow
	&__sub-list
		display none
	&__item
		position relative
		margin-right 20px
		@media (max-width: 380px)
			margin-right 0
			border-bottom 1px solid $c_yellow
		// @media (max-width: 380px)
		// 	&:hover .sub-menu
		// 		position relative
		// 		display block
		// 		left 0
		// 		opacity 1
		// 		animation subNav .5s ease-in-out
		// 	@media (max-width: 380px)
		// 		pointer-events:none
		// 		position relative
		// 		left 0
		// 		opacity 1
		// 		transition none
		&:hover ul.sub-menu
			display block
			left -20px
			opacity 1
			transition opacity .4s ease
		&:last-child
			margin-right 0
			border-bottom none
	&__link
		position relative
		display block
		color $c_black
		font-family $base-font2
		font-size 22px
		line-height 80px
		font-weight 400
		&:hover
			color $c_yellow
		@media (max-width: 1024px)
			font-size 18px
		@media (max-width: 768px)
			font-size 18px
		@media (max-width: 380px)
			padding-top 15px
			padding-bottom 15px
			padding-left 50px
			font-size 20px
			line-height 16px
.down-arrow
	position relative
	&:after
		position absolute
		content ''
		top calc(50% - 2px)
		right -12px
		width: 0
		height: 0
		border-style: solid
		border-width: 8px 4px 0 4px
		border-color: $c_black transparent transparent transparent
		opacity .5
		@media (max-width: 1024px)
			right -10px
			top calc(50% - 1px)
			border-width: 6px 3px 0 3px
		@media (max-width: 380px)
			display none
			// right 20%
.accordion-toggle
	position absolute
	top 0
	right: 0
	width 50px
	z-index: 999;
	padding-top: 30px;
	padding-bottom: 15px;
	font-size: 16px;
	line-height: 25px;
	border-left: 1px solid #E7E7E7;
	border-right: 1px solid #E7E7E7;
	-webkit-transition: all 0.25s ease;
	transition: all 0.25s ease;
	&:before
		content ''
		position absolute
		top calc(50% - 8px)
		right calc(50% - 8px)
		width: 16px;
		height: 16px;
		border 3px solid #ccc
		border-left none
		border-top none
		background-color transparent
		transform rotate(45deg)
		// border-style: solid;
		// border-width: 16px 8px 0 8px;
		// border-color: #007bff transparent transparent transparent;
.toggle-background 
	background: #E7E7E7
.toggle-rotate 
	transform: rotate(180deg)
@keyframes subNav
	0%
		opacity 0
	100%
		opacity 1
