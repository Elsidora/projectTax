include /blocks/sub-menu/sub-menu
mixin top-menu(items)
	+b.NAV.top-menu#navigation.navigation
		.nav-header
			//- a.nav-brand(href='#') Navigation
			.nav-toggle
		.nav-menus-wrapper
			+e.UL.list.nav-menu
				+e.LI.item
					a(href='tariffs.html') Тарифы
					+sub-menu({'Эконом':'tariff-econom.html',
										'Комфорт':'tariff-comfort.html',
										'Универсал':'tariff-universal.html',
										'Бизнес':'tariff-biznes.html',
										'Минивэн (6 мест)':'tariff-miniven-6.html',
										'Минивэн (8 мест)':'tariff-miniven-8.html',
										'Микроавтобус':'tariff-minibus.html'
										})
				+e.LI.item
					a(href='airport.html') Такси в аэропорт
					ul.nav-dropdown
						li
							a(href='airport-vnukovo.html') Внуково
							ul.nav-dropdown
								li
									a(href='vnukovo-balashiha.html') Балашиха - Внуково
