.page-footer
	min-height 500px
	padding-top 100px
	background url(../images/header-bg.png) no-repeat 50% bottom
	@media (max-width: 1024px)
		min-height 400px
		padding-top 50px
		background url(../images/header-bg.png) no-repeat 50% bottom
		background-size 1024px 400px
		background-position 0 -10px
	@media (max-width: 768px)
		background url(../images/header-bg.png) no-repeat 50% bottom
		background-size 760px 400px
		background-position 0 -10px
	@media (max-width: 414px)
		min-height 350px
	&__site-map
		display block
		width 250px
		margin 0 auto
		text-align center
		color $c_white
		font-size 16px
