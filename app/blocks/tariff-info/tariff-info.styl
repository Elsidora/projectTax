.tariff-info
	margin-bottom 50px
	@media (max-width: 380px)
		margin-bottom 10px
	&__title
		margin-bottom 60px
		text-align center
		@media (max-width: 380px)
			font-size 30px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
		justify-content space-around
	&__item
		position relative
		margin-right 90px
		padding-top 50px
		color $c_black
		font-family $base-font
		font-size 24px
		text-align center
		@media (max-width: 380px)
			margin-right 5px
			font-size 14px
		&:last-child
			margin-right 0
	&__icon
		position absolute
		top 0
		left calc(50% - 21px)
