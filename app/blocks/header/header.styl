	&__phone-number
		margin-left auto

		@media (min-width: 768px) and (max-width: 1024px)
			order 2
			margin 0 auto
		@media (min-width: 425px) and (max-width: 768px)
			order: 2;
			margin-left 0
		@media (min-width: 320px) and (max-width: 414px)
			// display block
			// text-align center
			margin-left 0
			order 2
			padding-top 0
			padding-left 0
	&__phone-link
		color $c_black
		font-family $h-font
		font-size 22px
		font-weight 400
		// line-height 80px
		text-decoration none
		@media (max-width: 768px)
			display block
			font-size 20px
			line-height 24px
			text-align center
			text-decoration none
		@media (max-width: 414px)
			font-size 16px
			text-decoration none
	&__content
		display -webkit-flex
		display -ms-flex
		display flex
		flex-direction column
		max-width 750px
		width 100%
		padding-left 20px
		@media (max-width: 1050px)
			max-width 500px
		@media (max-width: 768px)
			display none
