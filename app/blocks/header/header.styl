	&__car-container
		min-height 235px
		background url(../images/car-bg.png) no-repeat 670px bottom
		background-size 587px 230px
		animation: car 4s ease-in
		animation-fill-mode: both;
		animation-iteration-count: 1
		animation-delay 6s
		@media (max-width: 1024px)
			min-height 180px
			background-size 457px 180px
		@media (max-width: 768px)
			min-height 150px 
			background-size 300px 135px
		@media (max-width: 414px)
			display none
		&_train
			background url(../images/car-bg_train.png) no-repeat
			background-size 310px 130px
			animation: car-train 4s ease-in
			animation-fill-mode: both;
			animation-iteration-count: 1
			animation-delay 6s
@keyframes car
	0%
		background-position 670px bottom
	100%
		background-position 0% 0%
@keyframes car-train
	0%
		background-position 670px bottom
	100%
		background-position 70% bottom
