	&__car-container
		min-height 235px
		background url(../images/car-bg.png) no-repeat 670px bottom
		background-size 587px 230px
		animation: car 4s ease-in
		animation-fill-mode: both;
		animation-iteration-count: 1
		animation-delay 8s
		&_train
			background url(../images/car-bg_train.png) no-repeat 670px bottom
			animation: car-train 4s ease-in
			animation-fill-mode: both;
			animation-iteration-count: 1
			animation-delay 8s
@keyframes car
	0%
		background-position 670px bottom
	100%
		background-position 0% 0%
@keyframes car-train
	0%
		background-position 670px bottom
	100%
		background-position 70% bottom
