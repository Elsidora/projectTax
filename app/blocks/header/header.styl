.pages-header
	margin-bottom 20px
	// min-height 500px
	background url(../images/header-bg.png) no-repeat center top
	@media (max-width: 1024px)
		min-height 420px
		margin-bottom 10px
		background url(../images/header-bg.png) no-repeat center top
		background-size 1024px 520px
		background-position 0 20px
	@media (max-width: 768px)
		background url(../images/header-bg.png) no-repeat center top
		background-size 760px 400px
		background-position 0 50px
	@media (max-width: 414px)
		background none
	&_train
		background url(../images/train-bg.png) no-repeat 65% 90%,
							url(../images/header-bg.png) no-repeat center top
		@media (max-width: 1024px)
			background url(../images/train-bg.png) no-repeat,
							url(../images/header-bg.png) no-repeat center top
			background-size 450px 250px, 1024px 420px
			background-position 80% 90%, 0 20px
		@media (max-width: 768px)
			background url(../images/train-bg.png) no-repeat,
			url(../images/header-bg.png) no-repeat center top
			background-size 400px 200px, 760px 400px
			background-position 110% 85%, 0 50px
		@media (max-width: 768px)
			background none
	&_plane
		background url(../images/plane-bg.png) no-repeat 70% 35%,
							url(../images/header-bg.png) no-repeat center top
		@media (max-width: 1024px)
			background url(../images/plane-bg.png) no-repeat 90% 35%,
			url(../images/header-bg.png) no-repeat center top
			background-size 200px 80px, 1024px 420px
			background-position 90% 150px, 0 0
		@media (max-width: 768px)
			background url(../images/plane-bg.png) no-repeat,
			url(../images/header-bg.png) no-repeat center top
			background-size 200px 80px, 760px 400px
			background-position 90% 150px, 0 50px
		@media (max-width: 768px)
			background none
	&__top-row
		position fixed
		top 0
		left 0
		right 0
		background-color $c_white
		z-index 1505
		.center
			display -webkit-flex
			display -ms-flex
			display flex
			align-items center
	&__bottom-row
		padding-top 80px
		@media (max-width: 1024px)
			padding-top 85px
		.center
			display -webkit-flex
			display -ms-flex
			display flex
			// @media (max-width: 768px)
				
			@media (max-width: 425px)
				max-width 425px
				padding-top 60px
