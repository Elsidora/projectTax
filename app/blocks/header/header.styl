.page-header
	margin-bottom 80px
	min-height 630px
	background url(../images/header-bg.png) no-repeat 50% bottom
	&__top-row
		position fixed
		top 0
		left 0
		right 0
		background-color $c_white
		z-index 1505
		.container
			display -webkit-flex
			display -ms-flex
			display flex
	&__bottom-row
		padding-top 110px
		.container
			display -webkit-flex
			display -ms-flex
			display flex
	&__phone-number
		position relative
		left 30px
		width 270px
		font-family $h-font
		font-size 24px
		font-weight 400
		line-height 80px
	&__content
		max-width 750px
		width 100%
	&__title
		width 420px
		margin 0 auto
		margin-bottom 40px
		text-align center
	&__call-back
		display block
		width 240px
		min-height 50px
		margin 0 auto
		margin-bottom 80px
		color $c_yellow
		font-family $base-font
		font-size 19px
		line-height 50px
		background-color $c_black
		text-align center
	&__car-container
		min-height 245px
		background url(../images/car-bg.png) no-repeat right bottom
