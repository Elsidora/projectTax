.pages-header
	margin-bottom 60px
	min-height 620px
	padding-bottom 0
	border-bottom 0
	background url(../images/header-bg.png) no-repeat 50% bottom
	&_train
		background url(../images/train-bg.png) no-repeat 60% 90%,
							url(../images/header-bg.png) no-repeat 50% bottom
	&_plane
		background url(../images/plane-bg.png) no-repeat 70% 35%,
							url(../images/header-bg.png) no-repeat 50% bottom
	&__top-row
		position fixed
		top 0
		left 0
		right 0
		background-color $c_white
		z-index 1505
		.container
			display -webkit-flex
			display -ms-flex
			display flex
	&__bottom-row
		padding-top 80px
		.container
			display -webkit-flex
			display -ms-flex
			display flex
	&__phone-number
		position relative
		left 30px
		width 270px
		font-family $h-font
		font-size 24px
		font-weight 400
		line-height 80px
	&__content
		max-width 750px
		width 100%
	&__title
		position relative
		width 500px
		margin-bottom 200px
		padding-left 20px
		padding-right 90px
		padding-top 35px
		&:after
			position absolute
			content '495'
			right 0
			font-family $h-font
			font-size 42px
			color $c_white
			font-weight 700
