.tariffs
	padding-top 10px
	margin-bottom 10px
	&__title
		margin-bottom 70px
		text-align center
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: center;
	&__item
		width 274px
		min-height 274px
		margin-right 30px
		margin-bottom 30px
		padding-top 25px
		padding-bottom 25px
		padding-left 20px
		padding-right 20px
		background-color $c_white
		text-align center
		border-radius 5px
		@media (max-width: 768px)
			width 220px
			min-height 220px
			margin-right 20px
			margin-bottom 20px
	h3
		margin-bottom 30px
		@media (max-width: 768px)
			font-size 23px
			margin-bottom 15px
	.price
		font-family $h-font
		color $c_yellow
		font-size 40px
		font-weight 400
		@media (max-width: 768px)
			font-size 30px
	span
		display inline-block
		vertical-align top
		margin-bottom 15px
		color #ffc000
		font-family $base-font
		font-size 30px
		@media (max-width: 768px)
			font-size 20px
	&__link
		display inline-block
		vertical-align top
		width 240px
		min-height 50px
		color $c_yellow
		font-family $base-font
		font-size 19px
		line-height 50px
		background-color $c_black
		border-radius 5px
		@media (max-width: 768px)
			width 180px
			font-size 16px
			min-height 40px
			line-height 40px
		&:hover
			background-color lighten($c_black, 60%)
			color $c_black
