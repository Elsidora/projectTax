.tariffs
	margin-bottom 10px
	&__title
		margin-bottom 70px
		text-align center
		@media (max-width: 1024px)
			margin-bottom 40px
		@media (max-width: 380px)
			font-size 28px
	&__inner
		display -webkit-flex
		display -ms-flex
		display flex
		flex-wrap wrap
		justify-content: center;
		@media (max-width: 380px)
			justify-content: flex-start;
	&__item
		width 274px
		min-height 274px
		margin-right 30px
		margin-bottom 30px
		padding-top 25px
		padding-bottom 25px
		padding-left 20px
		padding-right 20px
		background-color $c_white
		text-align center
		border-radius 5px
		@media (max-width: 1024px)
			width 220px
			min-height 200px
			margin-right 25px
			margin-bottom 20px
			padding 10px
		@media (max-width: 768px)
			width 215px
			min-height 220px
			margin-right 20px
			margin-bottom 20px
			padding 10px
		@media (max-width: 380px)
			width 140px
			min-height 150px
			margin-right 10px
			margin-bottom 15px
			padding 5px
	h3
		margin-bottom 30px
		@media (max-width: 1024px)
			font-size 24px
			margin-bottom 10px
		@media (max-width: 768px)
			font-size 23px
		@media (max-width: 380px)
			font-size 16px
	.price
		font-family $h-font
		color $c_yellow
		font-size 40px
		font-weight 400
		@media (max-width: 1024px)
			font-size 30px
		@media (max-width: 768px)
			font-size 30px
		@media (max-width: 380px)
			font-size 22px
	span
		display inline-block
		vertical-align top
		margin-bottom 15px
		color #ffc000
		font-family $base-font
		font-size 30px
		@media (max-width: 1024px)
			font-size 20px
		@media (max-width: 768px)
			font-size 20px
		@media (max-width: 380px)
			font-size 16px
	&__link
		display inline-block
		vertical-align top
		width 240px
		min-height 50px
		color $c_yellow
		font-family $base-font
		font-size 19px
		line-height 50px
		background-color $c_black
		border-radius 5px
		@media (max-width: 1024px)
			width 190px
			font-size 16px
			min-height 40px
			line-height 40px
		@media (max-width: 768px)
			width 190px
			font-size 16px
			min-height 40px
			line-height 40px
		@media (max-width: 380px)
			width 120px
			min-height 30px
			line-height 30px
			font-size 14px
		&:hover
			background-color lighten($c_black, 60%)
			color $c_black
