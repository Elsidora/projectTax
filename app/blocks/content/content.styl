.about,
.about-tariff,
.about-stations,
.taxi-services,
.airport-taxi,
.airport-region,
.intercity
	margin-bottom 50px
	@media (max-width: 425px)
		margin-bottom 30px
	&__title
		margin-bottom 50px
		text-align center
		@media (max-width: 425px)
			font-size 30px
	.no-indent
		text-indent 0
	&__text,
	p
		padding-bottom 10px
		color $c_black
		font-family $base-font
		font-size 20px
		line-height: 1.5
		text-indent 25px
		@media (max-width: 425px)
			font-size 14px
		strong
			font-weight 700
	&__content-list,
	ul
		margin-bottom 10px
		list-style-type: disc;
		li
			margin-left 20px
			padding-bottom 5px
			font-family $base-font
			color $c_black
			font-size 18px
			@media (max-width: 425px)
				font-size 14px
			strong
				font-weight 700
	ol
		list-style:decimal;
		li
			margin-left 20px
			padding-bottom 5px
			font-family $base-font
			color $c_black
			font-size 18px
			@media (max-width: 425px)
				font-size 14px
			strong
				font-weight 700
	img
		margin-bottom 15px
	.bold
		font-weight 700
