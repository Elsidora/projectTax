.about,
.about-tariff,
.about-stations,
.taxi-services,
.airport-taxi
	margin-bottom 50px
	@media (max-width: 380px)
		margin-bottom 30px
	&__title
		margin-bottom 50px
		text-align center
		@media (max-width: 380px)
			font-size 30px
	&__text
		padding-bottom 10px
		color $c_black
		font-family $base-font
		font-size 20px
		line-height: 1.5
		text-indent 25px
		@media (max-width: 380px)
			font-size 14px
		strong
			font-weight 700
	&__content-list
		margin-bottom 10px
		li
			margin-left 20px
			padding-bottom 5px
			font-family $base-font
			color $c_black
			font-size 18px
			list-style-type: disc;
			@media (max-width: 380px)
				font-size 14px
			strong
				font-weight 700
	ol
		list-style:decimal;
		li
			margin-left 20px
			padding-bottom 5px
			font-family $base-font
			color $c_black
			font-size 18px
			@media (max-width: 380px)
				font-size 14px
			strong
				font-weight 700
.no-indent
	text-indent 0
#sedi-notify-navbar
	display none
	@media (max-width: 380px)
		display none
@media (max-width: 768px)
	.navbar-right
			display none
