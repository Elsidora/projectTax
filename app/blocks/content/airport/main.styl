.airport-taxi
	margin-bottom 60px
	&__title
		margin-bottom 15px
		text-align center
	&__text
		margin-bottom 30px
		color $c_black
		font-family $base-font
		font-size 20px
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
	&__item:not(:last-child)
		margin-right 80px
	&__link
		display inline-block
		vertical-align top
		width 300px
		min-height 45px
		color $c_black
		font-family $base-font
		font-size 15px
		line-height 45px
		background-color $c_white
		text-align center
		border-radius 5px
.airport-service
	display flex
	margin-bottom 40px
	&__item
		position relative
		width 150px
		margin-right 15px
		padding-top 70px
		color $c_black
		font-family $base-font
		font-size 19px
		text-align center
		&:last-child
			margin-right 0
	&__icon
		position absolute
		top 0
		left calc(50% - 20px)
.airport-transfers
	margin-bottom 60px
	&__title
		margin-bottom 10px
		font-size 20px
	&__text
		margin-bottom 15px
		color $c_black
		font-family $base-font
		font-size 20px
	&__order-taxi
		display inline-block
		vertical-align top
		width 300px
		min-height 45px
		margin-bottom 25px
		color $c_black
		font-family $base-font
		font-size 20px
		line-height 45px
		background-color $c_white
		text-align center
		border-radius 5px
