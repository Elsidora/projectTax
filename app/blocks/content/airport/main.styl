.airport-taxi
	margin-bottom 60px
	&__title
		margin-bottom 50px
		text-align center
	&__text
		margin-bottom 10px
		color $c_black
		font-family $base-font
		font-size 20px
		line-height 1.5
		text-indent 25px
		strong
			font-weight 700
	&__list
		display -webkit-flex
		display -ms-flex
		display flex
	&__item:not(:last-child)
		margin-right 80px
	&__link
		display inline-block
		vertical-align top
		width 300px
		min-height 45px
		color $c_black
		font-family $base-font
		font-size 15px
		line-height 45px
		background-color $c_white
		text-align center
		border-radius 5px
	ul
		margin-bottom 10px
		li
			margin-left 20px
			padding-bottom 5px
			font-family $base-font
			color $c_black
			font-size 18px
			list-style-type: disc;
			strong
				font-weight 700
.airport-transfers
	margin-bottom 60px
	&__title
		margin-bottom 10px
		font-size 20px
	&__text
		margin-bottom 15px
		color $c_black
		font-family $base-font
		font-size 20px
	&__order-taxi
		display inline-block
		vertical-align top
		width 300px
		min-height 45px
		margin-bottom 25px
		color $c_black
		font-family $base-font
		font-size 20px
		line-height 45px
		background-color $c_white
		text-align center
		border-radius 5px
