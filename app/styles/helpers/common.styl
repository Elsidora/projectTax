h1,h2,h3,p
	margin 0
	padding 0
.heading
	&_h1
		color $c_white
		font-family $h-font
		font-size 42px
		font-weight 400
		text-transform uppercase
		text-align center
		@media (max-width: 768px)
			font-size 36px
		@media (max-width: 414px)
			font-size 30px
	&_h2
		color $c_white
		font-family $h-font
		font-size 41px
		font-weight 400
		text-align center
		@media (max-width: 768px)
			font-size 36px
	&_h3
		color #3e310c
		font-family $h-font
		font-size 30px
.page
	background-color $c_yellow
.page__inner
	display: flex
	min-height: 100vh
	flex-direction: column
	margin: 0 auto

.page-content
	flex: 1

.center
	max-width: $page-width
	margin: 0 auto
	padding-left 10px
	padding-right 10px
	@media (max-width: 1024px)
		flex-wrap: wrap;
		max-width: 1024px
		padding 0 10px
	@media (min-width: 414px) and (max-width: 768px)
		flex-direction: row;
		max-width: 768px
		padding 0 10px
	@media (min-width: 320px) and (max-width: 414px)
		flex-direction: column;
		max-width: 414px
		padding 0 10px
.overlay
	display: none
	position: absolute
	top: 0
	left: 0
	bottom 0
	width: 100%
	min-height: 100vh
	background-color: rgba(0,0,0, .5)
	z-index: 150

.link
	text-decoration: none

.image
	max-width: 100%
	height: auto
	@media (max-width: 414px)
		max-width 300px
.img-center
	display block
	margin 0 auto
.btn
	display inline-block
	vertical-align top
	border: none
	outline: none

.icon, .form-icon
	position absolute
	display inline-block
	vertical-align top
	fill: inherit
	stroke: inherit

.input-wrapper
	position relative

.input-field
	display inline-block
	vertical-align top
	border: none
	outline: none
.show
	display block
.hidden,
.hide
	display none

.taxi-icon
	position relative
	&:after
		position absolute
		content ''
		bottom -40px
		left calc(50% - 89px)
		width 178px
		height 24px
		background url(../images/taxi-icon.png) no-repeat
		@media (max-width: 1024px)
			bottom -30px
